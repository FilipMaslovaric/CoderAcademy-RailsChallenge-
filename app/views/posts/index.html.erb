<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user %></td>
        <td><%= post.group %></td>
        <td><%= link_to 'Show', group_post_path(@group, post) %></td>
        <td><%= link_to 'Edit', edit_group_post_path(@group, post) %></td>
        <td><%= link_to 'Destroy', group_post_path(@group, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_group_post_path(@group) %>
